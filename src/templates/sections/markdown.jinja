<section class="markdown-section">
    <div class="markdown-content">
        {% if title %}
        <h1 class="markdown-title">{{ title }}</h1>
        {% endif %}
        
        {% if description %}
        <p class="markdown-description">{{ description }}</p>
        {% endif %}
        
        {% if title or description %}
        <hr class="markdown-divider">
        {% endif %}
        
        {{ content_html | safe }}
    </div>
</section>